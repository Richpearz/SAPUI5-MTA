<mvc:View controllerName="richpearz.projectfioriexp.controller.App"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Shell>
        <App>
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>

                        <HBox >

                            <Label id="labelEmployee"
                                    class="sapUiSmallMargin"
                                    text="{i18n>labelEmployee}" /> 

                            <Input id="inputEmployee"
                                    class="sapUiSmallMargin"
                                    maxLength="6"
                                    liveChange = "onValidate"
                                    width="200px"
                                    value="{richpearzEmployee>/employeeId}" />

                            <Label id="labelCountry"
                                    visible="true"
                                    class="sapUiSmallMargin"
                                    text="{i18n>labelCountry}" /> 

                            <Select id="selectCountry"
                                    items="{richpearzEmployee>/listCountry}"
                                    selectedKey="{richpearzEmployee>/countryKey}"
                                    visible="true"
                                    forceSelection="false"
                                    class="sapUiSmallMargin">

                                <items>
                                    <core:Item key="{richpearzEmployee>key}" text="{richpearzEmployee>text}"/>
                                </items>

                            </Select>

                            <Button id="btnFilter"
                                    class="sapUiSmallEndMargin"
                                    icon="sap-icon://search"
                                    press="onFilter"/>

                            <Button id="btnClear"
                                    class="sapUiSmallEndMargin"
                                    icon="sap-icon://clear-filter"
                                    press="onClearFilter"/>

                        </HBox>

                        <HBox >

                            <Panel>

                                <content>
                                
                                    <Table id="tableEmployee"
                                            items="{richpearzEmployee>/Employees}"
                                            headerText="Employees: ({richpearzEmployee>/Amount})">
                                    
                                        <columns>

                                            <Column >                                            
                                                <Text text="{i18n>tableId}"></Text>                                            
                                            </Column>

                                            <Column >                                            
                                                <Text text="{i18n>tableName}"></Text>
                                            </Column>

                                            <Column >                                            
                                                <Text text="{i18n>tableCountry}"></Text>                                            
                                            </Column>

                                            <Column >                                            
                                                <Text text="{i18n>tableCity}"></Text>                                            
                                            </Column>
                                        
                                        </columns>

                                        <items>
                                            <ColumnListItem press="onMessage"
                                                            type="Active">
                                                <cells>
                                                    <ObjectIdentifier title="{richpearzEmployee>EmployeeID}" />
                                                    <Text text="{richpearzEmployee>FirstName} {richpearzEmployee>LastName}"></Text>
                                                    <Text text="{richpearzEmployee>Country}"></Text>
                                                    <Text text="{richpearzEmployee>City}"></Text>
                                                </cells>
                                            
                                            </ColumnListItem>
                                        
                                        </items>

                                    </Table>
                                
                                </content>

                            </Panel>

                        </HBox>

                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
